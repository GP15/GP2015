<% provide(:title, 'Admin') %>

<p id="notice"><%= notice %></p>

<h1>Admin Dashboard</h1>

<h3>City</h3>
<ul>
  <% @cities.each do |city| %>
    <li><%= link_to city.name, city_path(city) %></li>
  <% end %>
</ul>
<%= link_to "+ Add city", new_city_path %>

<h3>Partners</h3>
<ul>
  <% @partners.each do |partner| %>
    <li>
      <%= link_to partner.company, partner_path(partner) %>
      [<%= link_to "edit", edit_partner_path(partner) %>]
    </li>
  <% end %>
</ul>
<%= link_to "+ Add partner", new_partner_path %>
