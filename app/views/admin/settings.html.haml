- provide(:title, 'Settings')
%section.padding-one
  .container
    .row
      %h1.title-large.text-center.margin-four-bottom Settings
      .col-md-3.col-md-offset-2
        %table.table.table-condensed
          %thead
            %tr
              %th City
              %th= link_to "+ add", new_city_path, class: "pull-right green-text"
          %tbody.link-underline
            - @cities.each do |city|
              %tr
                %td= city.name
                %td= link_to "edit", edit_city_path(city), class: "pull-right"
      .col-md-3.col-md-offset-2
        %table.table.table-condensed
          %thead
            %tr
              %th Activity
              %th= link_to "+ add", new_activity_path, class: "pull-right green-text"
          %tbody.link-underline
            - @activities.each do |activity|
              %tr
                %td= activity.name
                %td= link_to "edit", edit_activity_path(activity), class: "pull-right"
