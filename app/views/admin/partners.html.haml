- provide(:title, "Partners")
%section.padding-one
  .container
    .row
      %h1.title-large.text-center.margin-two-bottom Partners
      .col-md-6.center-col
        - if City.count == 0
          %p.text-center
            You need to #{link_to "add a city", new_city_path, class: "underline"} before you can add a partner.
        - else
          = form_tag admin_featured_path, :method => :post do
            %table.table.table-condensed.table-striped
              %thead
                %tr
                  %th Partner
                  %th City
                  %th Featured
                  %th{:colspan => "2"}= link_to "+ add", new_partner_path, class: "pull-right green-text"
              %tbody.link-underline
                - @partners.each do |partner|
                  %tr
                    %td= link_to partner.company, admin_partner_path(partner)
                    %td= partner.city.name
                    %td= check_box_tag 'featured[]', partner.id, partner.featured
                    %td= link_to "link", partner_url(partner), target: "_blank", class: "pull-right"
            = submit_tag "Add to Featured", class: "pull-right green-text"