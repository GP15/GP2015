- provide(:title, "#{@partner.company}: Classes")
%section.no-padding-section
  .container
    = render 'partner_info'
    = tabs
    - if @klasses.empty?
      = link_to "+ Add a class", new_partner_klass_path(@partner), class: "green-text"
    - else
      %table.table.table-condensed.table-striped.th-border-unset.text-13px
        %thead
          %tr
            %th Class
            %th Activity
            %th Age
            %th Level
            %th.text-center Reservation Limit
            %th Description
            %th= link_to "+ add", new_partner_klass_path(@partner), class: "pull-right green-text"
        %tbody.link-underline
          - @klasses.each do |klass|
            %tr
              %td= klass.name
              %td= klass.activity.name
              %td
                = klass.age_start
                \- #{klass.age_end}
              %td= klass.level
              %td.text-center= is_unlimited?(klass.reservation_limit)
              %td= klass.description.truncate(60, separator: ' ')
              %td= link_to "edit", edit_partner_klass_path(@partner, klass), class: "pull-right"
