<table class="table table-condensed table-striped th-border-unset text-13px">
  <thead>
    <tr>
      <th>Schedule</th>
      <th>Class</th>
      <th class="text-center">Time</th>
      <th class="text-center">Class Size</th>
      <th class="text-center">Reservations</th>
      <th><%= link_to "+ add", new_partner_schedule_path(@partner), class: "pull-right green-text" %></th>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.starts_at.strftime("%d %b %Y") %></td>
        <td><%= schedule.klass.name if schedule.klass %></td>
        <td class="text-center"><%= schedule.starts_at.strftime("%l:%M%P") if schedule.starts_at %>
        â€” <%= schedule.ends_at.strftime("%l:%M%P") if schedule.ends_at %></td>
        <td class="text-center"><%= schedule.quantity %></td>
        <td class="text-center green-text"><%= reservation_count(schedule.reservations.size) %></td>
        <td><%= link_to "view", admin_schedule_path(schedule), class: "pull-right" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
