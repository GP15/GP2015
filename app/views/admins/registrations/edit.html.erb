<% provide(:title, "Admin Profile") %>

<%= link_to "â‡½ back to admin area", admin_path %>

<h1 class="title-large text-center margin-two-six">
  <%= resource_name.to_s.humanize %> Profile
</h1>

<%= form_for(resource, as: resource_name, url: admin_registration_path(resource), html: { method: :patch }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <br>
  <div class="field margin-five-top">
    <%= f.label :current_password %> <i>(input your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="margin-five">
    <%= f.submit "Update", class: "highlight-button-dark btn btn-small button" %>
  </div>
<% end %>
