<% provide(:title, 'Add activity') %>

<section class="padding-one">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <h1 class="title-large text-center margin-two-six">Add Activity</h1>

        <%= form_for(@activity) do |f| %>
          <%= render 'form', f: f %>

          <div class="margin-five pull-right">
            <%= link_to "Cancel", admin_settings_path, class: secondary_button_small %>
            <%= f.submit "Create", class: primary_button_small %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</section>
