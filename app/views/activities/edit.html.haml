- provide(:title, 'Edit activity')
%section.padding-one
  .container
    .row
      .col-md-4.col-md-offset-4
        %h1.title-large.text-center.margin-two-six Edit Activity
        = form_for(@activity) do |f|
          = render 'form', f: f
          .margin-five.clearfix
            = link_to 'Delete', @activity, method: :delete,              |
              data: { confirm: "Delete activity <#{@activity.name}>?" }, |
              class: "pull-left underline padding-two"                   |
            = f.submit "Update", class: "#{primary_button_small} pull-right"
            = link_to "Cancel", admin_settings_path, class: "#{secondary_button_small} pull-right"
