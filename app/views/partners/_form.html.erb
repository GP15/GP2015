<%= form_for(@partner) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :company %><br>
    <%= f.text_field :company %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </div>
  <div class="field">
    <%= f.label :city_id %><br>
    <%= collection_select(:partner, :city_id, City.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.select :state, Partner::STATES %>
  </div>
  <div class="field">
    <%= f.label :Picture, "Picture Link" %><br>
    <%= f.text_field :img_url %>
  </div>
  <div class="actions">
    <%= f.submit %>
    <%= link_to "Cancel", admin_path %>
  </div>
<% end %>
