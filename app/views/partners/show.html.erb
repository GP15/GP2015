<% provide(:title, @partner.company) %>

<%= render 'layouts/nav' %>
<%= render 'hero' %>

<section class="padding-two">
  <div class="container">
    <div class="row">
      <% if @schedules.present? %>
        <table class="table">
          <thead>
            <tr>
              <th>Date</th>
              <th>Activity</th>
              <th>Time</th>
              <th>Level</th>
              <th>Age</th>
              <th>Availability</th>
            </tr>
          </thead>
          <tbody>
            <% @schedules.each do |schedule| %>
              <tr>
                <td><%= schedule.date.strftime("%d %b %Y") %></td>
                <td><%= schedule.klass.name if schedule.klass %></td>
                <td>
                  <%= schedule.start_time.strftime("%l:%M%P") %> -
                  <%= schedule.end_time.strftime("%l:%M%P") %>
                </td>
                <td><%= schedule.klass.level if schedule.klass %></td>
                <td><%= schedule.klass.age_start %>-<%= schedule.klass.age_end %></td>
                <td><%= link_to 'Reserve', invite_path, class: "highlight-button-dark btn btn-small btn-round button" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No current activities in the meantime.</p>
      <% end %>
    </div>
  </div>
</section>
