<section class="page-title page-title-medium parallax3 parallax-fix" style="background: url(<%= @partner.img_url %>) 50%;">
  <div class="opacity-full bg-black"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 margin-eight-top">
        <!-- page title -->
        <h1 class="white-text"><%= @partner.company %></h1>
        <!-- end page title -->
        <!-- page title tagline -->
        <span class="text-uppercase white-text">
          <%= @partner.address %>, <%= @partner.city.name %>, <%= @partner.state %>
        </span><br>
        <span class="text-uppercase white-text">
          <%= @partner.phone %> # <%= @klasses.map { |klass| klass.name }.join(", ") %>
        </span>
        <!-- end title tagline -->
      </div>
    </div>
  </div>
</section>
