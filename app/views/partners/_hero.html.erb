<section class="page-title hero-partner parallax3 parallax-fix"
         style="background: url(<%= @partner.img_url %>) 50%;">
  <div class="opacity-full bg-blue"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 margin-eight-top center-col text-center">
        <h1><%= @partner.company %></h1>

        <span class="text-uppercase">
          <%= @partner.address %>, <%= @partner.city.name %>, <%= @partner.state %>
        </span><br>
        <span>
          <%= @partner.phone %> # <%= @klasses.map { |klass| klass.name }.join(", ") %>
        </span>
      </div>
    </div>
  </div>
</section>
