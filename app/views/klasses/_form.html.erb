<%= render 'shared/error_messages', object: f.object %>

<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :activity_id, "Category" %><br>
  <%= collection_select(:klass, :activity_id, Activity.all, :id, :name) %>
</div>
<div class="field">
  <%= f.label :level %><br>
  <%= f.select :level, Klass::LEVEL %>
</div>
<div class="field">
  <label>Age Group</label><br>
  <%= f.select :age_start, 4..17 %>
  <label> to </label>
  <%= f.select :age_end, 4..17, selected: @klass.age_end || 17 %>
</div>
<div class="field">
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</div>
