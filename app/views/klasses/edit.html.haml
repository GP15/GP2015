- provide(:title, 'Edit class')
%section.padding-one
  .container
    .row
      .col-md-6.col-md-offset-3
        %h1.title-large.text-center.margin-four-bottom Edit Class
        = form_for [@partner, @klass] do |f|
          = render 'form', f: f
          .margin-five.clearfix
            = link_to 'Delete', [@partner, @klass], method: :delete, |
              data: { confirm: "Delete class <#{@klass.name}>?" },   |
              class: "pull-left underline padding-two"               |
            = f.submit "Update", class: "#{primary_button_small} pull-right"
            = link_to "Cancel", admin_partner_klasses_path(@partner), |
              class: "#{secondary_button_small} pull-right"           |
