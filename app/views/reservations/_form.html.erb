<div class="reservation-form">
  <h4>Reserve this class for...</h4>

  <%= form_for [@schedule, @reservation] do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="field">
      <%= f.collection_select :child_id, @children, :id, :first_name, {}, { class: "width-100" } %>
    </div>

    <div class="pull-right">
      <%= f.submit "Reserve", class: primary_button_small %>
    </div>
  <% end %>
</div>
