<div class="content-main">
  <!-- tab -->
  <div class="activity-tab">
    <!-- tab navigation -->
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab3_sec1" data-toggle="tab">Upcoming Activities</a></li>
      <li><a href="#tab3_sec2" data-toggle="tab">Past Activities</a></li>
    </ul>
    <!-- end tab navigation -->
    <!-- tab content section -->
    <div class="tab-content">
      <!-- tab content -->
      <div class="tab-pane fade active in" id="tab3_sec1">
        <% if @current_reservations.empty? %>
          <div class="empty-content">
            <i class="fa fa-plus"></i>
            <h3>You Have No New Reservations In The Meantime!</h3>
            <p>Find new schedules to reserve in the <%= link_to "schedules", schedules_path, class: "underline" %> section.</p>
          </div>
        <% else %>
          <%= render 'reservations', reservations: @current_reservations %>
        <% end %>
      </div>
      <!-- end tab content -->
      <!-- tab content -->
      <div class="tab-pane fade" id="tab3_sec2">
        <% if @past_reservations.empty? %>
          <div class="empty-content">
            <h3>Looks like you don't have any past reservations.</h3>
          </div>
        <% else %>
          <%= render 'reservations', reservations: @past_reservations %>
        <% end %>
      </div>
      <!-- end tab content -->
    </div>
    <!-- end tab content section -->
  </div>
  <!-- end tab -->
</div>
