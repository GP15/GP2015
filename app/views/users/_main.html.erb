<!-- tab -->
<div class="tab-style6">
  <div class="row">
    <div class="col-md-12 col-sm-12">
      <!-- tab navigation -->
      <ul class="nav nav-tabs nav-tabs-light text-left">
        <li class="active"><a href="#tab3_sec1" data-toggle="tab">Upcoming Activities</a></li>
        <li><a href="#tab3_sec2" data-toggle="tab">Past Activities</a></li>
      </ul>
      <!-- end tab navigation -->
    </div>
  </div>
  <!-- tab content section -->
  <div class="tab-content">
    <!-- tab content -->
    <div class="tab-pane fade in active" id="tab3_sec1">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <% if @current_reservations.empty? %>
            <p>You have no new reservations in the meantime. Find new schedules to reserve in the <%= link_to "schedules", schedules_path, class: "underline" %> section.</p>
          <% else %>
            <%= render 'reservations', reservations: @current_reservations %>
          <% end %>
        </div>
      </div>
    </div>
    <!-- end tab content -->
    <!-- tab content -->
    <div class="tab-pane fade in" id="tab3_sec2">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <% if @past_reservations.empty? %>
            <p>No reservations found in the past.</p>
          <% else %>
            <%= render 'reservations', reservations: @past_reservations %>
          <% end %>
        </div>
      </div>
    </div>
    <!-- end tab content -->
  </div>
  <!-- end tab content section -->
</div>
<!-- end tab -->
