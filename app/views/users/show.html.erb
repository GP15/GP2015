<% provide(:title, "User Dashboard") %>

<%= render 'layouts/nav_dark_text' %>

<section class="margin-five padding-three">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <table class="table table-condensed">
          <thead>
            <tr>
              <th>Children</th>
              <th><%= link_to "+ add", new_user_child_path(current_user), class: "pull-right green-text" %></th>
            </tr>
          </thead>
          <tbody>
            <% @children.each do |child| %>
              <tr>
                <td colspan="2"><%= link_to child.first_name, edit_user_child_path(current_user, child), class: "link-underline" %> (<%= age(child) %>)</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
