- provide(:title, "Sign up")
.content.sign-up-page
  .container
    .signup-container
      %h1 Sign up
      = simple_form_for(resource,
                        :as => resource_name,
                        :url => registration_path(resource_name),
                        :html => {  :class => 'signup-form form-container form-horizontal form-group-icon' },
                                    :defaults => { label: false  }) do |f|
        = f.input :name, autofocus: true, :placeholder => "Full Name (as per ID)"
        = f.input :email, :placeholder => "Email"
        = f.input :password, autocomplete: "off", :placeholder => "Password"
        = f.input :password_confirmation, autocomplete: "off", :placeholder => "Password Confirmation"
        = f.input :phone_no, :placeholder => "Phone no"
        = f.input :location, :collection => City.pluck( :name)
        .form-group
          = f.submit "Sign up", class: "form-submit-btn gp-button"
