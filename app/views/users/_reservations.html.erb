<table class="table table-responsive-block activity-table">
  <thead>
    <tr>
      <th></th>
      <th>Date</th>
      <th>Time</th>
      <th>Activity</th>
      <th>Studio</th>
      <th>City</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% reservations.each do |reservation| %>
      <tr>
        <td class="name-col" data-title="Name"><%= reservation.child.first_name %></td>
        <td class="date-col" data-title="Date"><%= reservation.schedule.starts_at.strftime("%-d %b %Y") %></td>
        <td class="time-col" data-title="Time">
          <%= reservation.schedule.starts_at.strftime("%l:%M%P") %> -
          <%= reservation.schedule.ends_at.strftime("%l:%M%P") %>
        </td>
        <td class="activity-col" data-title="Activity"><%= reservation.schedule.klass.name %></td>
        <td class="studio-col" data-title="Studio">
          <%= link_to reservation.schedule.partner.company, partner_path(reservation.schedule.partner) %>
        </td>
        <td class="city-col" data-title="City"><%= reservation.schedule.city.name %></td>
        <td class="availability-col" data-title="Availability">
          <%= link_to "view", new_schedule_reservation_path(reservation.schedule), class: "gp-button" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
