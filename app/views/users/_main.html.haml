.content-main
  / tab
  .activity-tab
    / tab navigation
    %ul.nav.nav-tabs
      %li.active
        %a{"data-toggle" => "tab", :href => "#tab3_sec1"} Upcoming Activities
      %li
        %a{"data-toggle" => "tab", :href => "#tab3_sec2"} Past Activities
    / end tab navigation
    / tab content section
    .tab-content
      / tab content
      #tab3_sec1.tab-pane.fade.active.in
        - if @current_reservations.empty?
          .empty-content
            %i.fa.fa-plus
            %h3 You Have No New Reservations In The Meantime!
            %p
              Find new schedules to reserve in the #{link_to "schedules", schedules_path, class: "underline"} section.
        - else
          = render 'reservations', reservations: @current_reservations
      / end tab content
      / tab content
      #tab3_sec2.tab-pane.fade
        - if @past_reservations.empty?
          .empty-content
            %h3 Looks like you don't have any past reservations.
        - else
          = render 'reservations', reservations: @past_reservations
      / end tab content
    / end tab content section
  / end tab
