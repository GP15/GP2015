              <div class="user-email">
                <%= email_field_tag :email, nil,  placeholder: "Email", class: 'contact-request-text' %>
              </div>
            </div>

            <div class="form-group">
              <div class="user-postcode">
                <%= text_field_tag :zipcode, nil, placeholder: 'Postcode', class: 'contact-request-text' %>
              </div>
            </div>

            <%= submit_tag "Get Started", class: 'btn btn-primary' %>
          <% end %>
        </div>

        <div class="col-md-6 right-header-activities">
          <div class="header-activities">
            <%= image_tag 'dance.png' %>
            <div class="title">DANCES</div>
          </div>
          <div class="header-activities">
            <%= image_tag 'dance.png' %>
            <div class="title">ARTS</div>
          </div>
          <div class="header-activities">
            <%= image_tag 'dance.png' %>
