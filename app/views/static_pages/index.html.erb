            <div class="title">MARTIAL</div>
          </div>
          <div class="header-activities">
            <%= image_tag 'dance.png' %>
            <div class="title">EDUCATION</div>
          </div>
          <div class="header-activities">
            <%= image_tag 'dance.png' %>
            <div class="title">MUSIC</div>
          </div>
        </div>


      </div>

    </div>
  </div>

  <div class="section-row cta-container">
    <div class="container">
      <div class="row">
        <div class="col-md-9 lead-text">
          <h2>Sign Up For Free & Get 2 FREE Activities Worth RM50 For Your Child</h2>
        </div>
        <div class="col-md-3 lead-btn">
          <%= link_to 'Get Started', '#', class: 'btn btn-primary btn-block' %>
        </div>
