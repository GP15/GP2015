    <div class="container">
      <div class="row">
        <h2>Featured Partners</h2>
        <p class="headline-description">These Are Some Of Our Top Class Partnering Centres & Studios</p>
        <% if @featured_partners.present? %>

          <% @featured_partners.each_with_index do |partner, index| %>
            <% if index == 0 %>
              <div class="col-md-3">
            <% elsif index == 1 %>
              <div class="col-md-5">
            <% elsif index == 2 %>
              <div class="col-md-4">
            <% elsif index == 3 %>
              <div class="col-md-5">
            <% elsif index == 4 %>
              <div class="col-md-4">
            <% elsif index == 5 %>
              <div class="col-md-3">
            <% end %>
              <div class="partner-feature-img">
                <%= image_tag partner.img_url, class: "partner-bg" %>
                <div class="bg-overlay"></div>
                <div class="company">
                  <%= partner.company %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
        <div class="col-md-3">
          <div class="cta-partner">
            <div class="title">Get Started</div>
            <div class="description">To View More Partners</div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="section-row last-cta-container cta-container gray-bg">
    <div class="container">
      <div class="row">

        <div class="col-md-6 col-xs-12 footer-cta-container">

          <%= form_tag contact_request_zipcodes_path, class: 'form-inline', id: 'send-request-zipcode-form' do %>
            <p class="footer-description">
              Sign up is Free & get 2 Free classes worth RM50 from multiple choices. For limited time only. Don’t miss out!
            </p>

            <div class="form-group">
              <div class="user-email">
                <%= email_field_tag :email, nil,  placeholder: "Email", class: 'contact-request-text' %>
              </div>
            </div>

            <div class="form-group">
              <div class="user-postcode">
                <%= text_field_tag :zipcode, nil, placeholder: 'Postcode', class: 'contact-request-text' %>
              </div>
            </div>

            <%= submit_tag "Get Started", class: 'btn btn-primary' %>
          <% end %>

        </div>


      </div>
    </div>
  </div>

</div>


